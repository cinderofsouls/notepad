<Window x:Class="Notepad.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Notepad"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Menu Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="4">
            <MenuItem Header="_File" Height="20" Width="auto">
                <MenuItem Header="New" Command="{Binding MessageBoxTestCommand}" HorizontalAlignment="Left" Height="20" Width="192"/>
                <MenuItem Header="Open" HorizontalAlignment="Left" Height="20" Width="192"/>
                <MenuItem Header="Save" HorizontalAlignment="Left" Height="20" Width="192"/>
                <MenuItem Header="Save As" HorizontalAlignment="Left" Height="20" Width="192"/>
                <Separator HorizontalAlignment="Left" Height="1" Width="192"/>
                <MenuItem Header="Exit" HorizontalAlignment="Left" Height="20" Width="192"/>
            </MenuItem>
            <MenuItem Header="_Edit" Height="20" Width="auto">
                <MenuItem Header="Copy" HorizontalAlignment="Left" Height="20" Width="150"/>
                <MenuItem Header="Cut" HorizontalAlignment="Left" Height="20" Width="150"/>
                <MenuItem Header="Paste" HorizontalAlignment="Left" Height="20" Width="150"/>
            </MenuItem>
            <MenuItem Header="_Format" Height="20" Width="auto">
                <MenuItem x:Name="MenuItemWrap" Header="Wrap" IsCheckable="False" IsChecked="True" HorizontalAlignment="Left" Height="20" Width="auto"/>
            </MenuItem>
        </Menu>
        <TextBox x:Name="txtBox" 
                 Text="{Binding TextData}"
                 TextWrapping="Wrap" 
                 AcceptsReturn="True" 
                 Loaded="txtBox_Loaded" 
                 Grid.Column="0" 
                 Grid.Row="1" 
                 HorizontalScrollBarVisibility="Auto" 
                 VerticalScrollBarVisibility="Auto"/>
    </Grid>
</Window>
